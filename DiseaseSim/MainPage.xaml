<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiseaseSim.MainPage">

    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

            <VerticalStackLayout Padding="20" Spacing="15">

                <Label x:Name="GameMessage" 
           Text="Select a configuration file to start the simulation." 
           FontSize="18" 
           TextColor="Black" />

                <Button Text="Select Configuration File"
            x:Name="LoadConfigButton"
            Clicked="LoadConfigButton_Clicked" />

                <Button Text="Start Simulation"
            x:Name="StartButton"
            IsVisible="False"
            Clicked="StartButton_Clicked" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
