<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiseaseSim.MainPage">

    <ScrollView>

        <VerticalStackLayout Padding="20" Spacing="15">

                <StackLayout Padding="20" Spacing="10">
                    <Label Text="Disease Spread Simulation" 
               FontSize="24" 
               HorizontalOptions="Center" 
               VerticalOptions="Start" />

                <Button Text="Load File and Start Simulation" 
                FontSize="18" 
                Clicked="OnLoadFileButtonClicked" />

                <Label x:Name="HourLabel" Text="Current Hour: 0" />
                <Label x:Name="AliveCountLabel" Text="Alive Count: 0" />
                <Label x:Name="DeadCountLabel" Text="Dead Count: 0" />
                <Label x:Name="InfectedCountLabel" Text="Infected Count: 0" />
                <Label x:Name="QuarantinedCountLabel" Text="Quarantined Count: 0" />
                <Label x:Name="TopInfectedLabel" Text="Top Infected Person: N/A" />
                <Label x:Name="TopSpreaderLabel" Text="Top Spreader Person: N/A" /> 

                <Button Text="Click to Progress to the Next Hour" 
                    FontSize="18" 
                    Clicked="OnSimulationTick" />
                    
            </StackLayout>
            </VerticalStackLayout>
    </ScrollView>
</ContentPage>
